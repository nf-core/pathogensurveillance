/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running a test data set
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines input files and everything required to run a full size pipeline test.

    Use as follows:
        nextflow run nf-core/pathogensurveillance -profile testserratia_38,<docker/singularity> --outdir <OUTDIR>

----------------------------------------------------------------------------------------
*/

params {
    config_profile_name        = 'Serratia full dataset profile for testing'
    config_profile_description = 'Serratia full dataset profile used to find bugs and to review report outputs'

    // Input data
    input = 'tests/data/metadata/sample_data_N664_true.csv'
    outdir = 'tests/output/serratia_full'
    reference_data = '/tests/data/metadata/ref_data.csv'
    n_ref_species = 0
    n_ref_genera = 0
    n_ref_closest = 0
    n_ref_closest_named = 0
    n_ref_context = 0
    n_ref_strains = 0
}
